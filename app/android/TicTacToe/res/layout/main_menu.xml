<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:paddingBottom="5dp" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo"
            android:textColor="#ff27943d"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    
    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56.5" />
     
    <RelativeLayout android:layout_width="match_parent"
	    android:layout_height="0dp"
        android:layout_weight="56" >
        
        <Button android:id="@+id/one_player_btn"
		    android:onClick="onOnePlayerClicked"
		    android:text="@string/one_player"
	        android:background="@drawable/one_player_btn_bg"
	        android:textColor="@drawable/one_player_btn_text_color"
	        style="@style/MenuButton" />
    </RelativeLayout>
    
    <RelativeLayout android:layout_width="match_parent"
	    android:layout_height="0dp"
       	android:layout_weight="56" >
        
        <Button android:id="@+id/two_players_btn"
		    android:onClick="onTwoPlayersClicked"
		    android:text="@string/two_players"
	       	android:background="@drawable/two_players_btn_bg"
	       	android:textColor="@drawable/two_players_btn_text_color"
	       	style="@style/MenuButton" />
    </RelativeLayout>    
    
    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="111.5" />

</LinearLayout>